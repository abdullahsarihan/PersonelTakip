@model List<PersonelTakipMVC.Models.DTOs.PersonelDto>
<h2>Personel Listesi</h2>
<a asp-action="Create" class="btn btn-primary">Yeni Personel</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Doğum Tarihi</th>
            <th>Departman</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Email</td>
                <td>@item.DogumTarihi.ToShortDateString()</td>
                <td>@item.DepartmanAdi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>