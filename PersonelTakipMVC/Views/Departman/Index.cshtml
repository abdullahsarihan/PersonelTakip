@model List<PersonelTakipMVC.Models.DTOs.DepartmanDto>

<h2>Departmanlar</h2>

<a asp-action="Create" class="btn btn-primary">Yeni Departman Ekle</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Departman Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmanAdi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>